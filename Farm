-- Script Roblox untuk Demon Soul Simulator (Auto Farm dengan GUI)
-- Catatan: Script ini adalah contoh sederhana dan mungkin tidak sempurna. Gunakan dengan risiko sendiri.
-- Pastikan Anda menggunakan executor seperti Synapse X atau Krnl untuk menjalankannya.
-- Script ini melanggar Terms of Service Roblox dan bisa menyebabkan ban akun.

-- Load library GUI (gunakan Rayfield atau Orion, pastikan library tersedia di executor Anda)
local Rayfield = loadstring(game:HttpGet('https://sirius.menu/rayfield'))()

-- Buat Window GUI
local Window = Rayfield:CreateWindow({
    Name = "Demon Soul Simulator Auto Farm",
    LoadingTitle = "Loading...",
    LoadingSubtitle = "by Grok AI",
    ConfigurationSaving = {
        Enabled = true,
        FolderName = "DemonSoulSim",
        FileName = "Config"
    },
    Discord = {
        Enabled = false,
        Invite = "",
        RememberJoins = true
    },
    KeySystem = false
})

-- Tab untuk Auto Farm
local Tab = Window:CreateTab("Auto Farm", 4483362458)

-- Toggle untuk Auto Farm
local AutoFarmToggle = Tab:CreateToggle({
    Name = "Enable Auto Farm",
    CurrentValue = false,
    Flag = "AutoFarm",
    Callback = function(Value)
        _G.AutoFarm = Value
        if Value then
            StartAutoFarm()
        else
            StopAutoFarm()
        end
    end,
})

-- Slider untuk Kecepatan Farm (dalam detik)
local FarmSpeedSlider = Tab:CreateSlider({
    Name = "Farm Speed (seconds)",
    Range = {0.1, 5},
    Increment = 0.1,
    Suffix = "s",
    CurrentValue = 1,
    Flag = "FarmSpeed",
    Callback = function(Value)
        _G.FarmSpeed = Value
    end,
})

-- Fungsi Auto Farm (contoh sederhana: teleport ke mob dan attack)
local function StartAutoFarm()
    while _G.AutoFarm do
        -- Cari mob terdekat (ganti dengan path yang sesuai di game)
        local player = game.Players.LocalPlayer
        local character = player.Character or player.CharacterAdded:Wait()
        local humanoidRootPart = character:FindFirstChild("HumanoidRootPart")
        
        -- Contoh: Teleport ke posisi mob (sesuaikan dengan game)
        -- Anda perlu menemukan path mob di game, misalnya workspace.Mobs
        local mobs = workspace:FindFirstChild("Mobs") -- Ganti dengan path yang benar
        if mobs then
            for _, mob in pairs(mobs:GetChildren()) do
                if mob:IsA("Model") and mob:FindFirstChild("HumanoidRootPart") then
                    humanoidRootPart.CFrame = mob.HumanoidRootPart.CFrame * CFrame.new(0, 0, -5) -- Teleport di depan mob
                    -- Simulasi attack (ganti dengan event attack game)
                    local args = { -- Contoh event attack, sesuaikan dengan game
                        [1] = "Attack"
                    }
                    game:GetService("ReplicatedStorage").Remotes.Combat:FireServer(unpack(args))
                    wait(_G.FarmSpeed or 1)
                    break
                end
            end
        end
        wait(0.1)
    end
end

local function StopAutoFarm()
    -- Hentikan loop
end

-- Inisialisasi
_G.AutoFarm = false
_G.FarmSpeed = 1

-- Load GUI
Rayfield:LoadConfiguration()
